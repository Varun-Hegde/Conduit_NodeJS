# More information at http://editorconfig.org/

root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_size              = 4
indent_style             = space
insert_final_newline     = true
max_line_length          = 100
trim_trailing_whitespace = true

# git
[COMMIT_EDITMSG]
max_line_length = 72

[*.{json,md}]
max_line_length = 0

[.vscode/*]
indent_size = 4
